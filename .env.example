# ===========================================
# Lead Generation System Configuration
# ===========================================

# Database
DATABASE_URL=sqlite+aiosqlite:///./lead_gen.db

# ===========================================
# AI Providers (выберите один или несколько - все БЕСПЛАТНЫЕ!)
# ===========================================

# Google Gemini (РЕКОМЕНДУЕТСЯ - 60 запросов/мин бесплатно)
# Получить ключ: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Groq (ОЧЕНЬ БЫСТРЫЙ - щедрый бесплатный лимит)
# Получить ключ: https://console.groq.com/keys
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-8b-instant

# OpenRouter (много бесплатных моделей)
# Получить ключ: https://openrouter.ai/keys
OPENROUTER_API_KEY=
OPENROUTER_MODEL=mistralai/mistral-7b-instruct:free

# Ollama (ЛОКАЛЬНО - полностью бесплатно, без API ключа)
# Установить: https://ollama.ai
# Затем выполнить: ollama pull llama3.2
OLLAMA_ENABLED=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# ===========================================
# Application Settings
# ===========================================

APP_NAME=Lead Generation System
DEBUG=true

# SECRET_KEY - используется для подписи сессий и токенов
# Генерируется автоматически при запуске, но можете задать свой:
# python -c "import secrets; print(secrets.token_hex(32))"
# SECRET_KEY=your-random-secret-key-here

# ===========================================
# Search Settings
# ===========================================

SEARCH_INTERVAL_MINUTES=60
MAX_LEADS_PER_SEARCH=50

# ===========================================
# Telegram (опционально - для расширенного парсинга)
# ===========================================
# Получить: https://my.telegram.org/apps
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_PHONE=

# ===========================================
# Email Settings (опционально - для отправки предложений)
# ===========================================
#
# Бесплатные SMTP серверы:
#
# Gmail (нужен App Password):
#   SMTP_HOST=smtp.gmail.com
#   SMTP_PORT=587
#   SMTP_USER=your-email@gmail.com
#   SMTP_PASSWORD=your-app-password  # НЕ обычный пароль!
#   Создать App Password: https://myaccount.google.com/apppasswords
#
# Yandex:
#   SMTP_HOST=smtp.yandex.ru
#   SMTP_PORT=587
#   SMTP_USER=your-email@yandex.ru
#   SMTP_PASSWORD=your-password
#
# Mail.ru:
#   SMTP_HOST=smtp.mail.ru
#   SMTP_PORT=587
#   SMTP_USER=your-email@mail.ru
#   SMTP_PASSWORD=your-password

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=

# ===========================================
# Redis (опционально - для фоновых задач)
# ===========================================
REDIS_URL=redis://localhost:6379/0
